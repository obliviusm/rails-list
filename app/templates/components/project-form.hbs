<div class="form-horizontal">
  <div class="form-group title">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=item.title class="form-control" placeholder="Title"}}
    </div>
  </div>

  <div class="form-group founders">
    <label class="col-sm-2 control-label">founders</label>
    <div class="col-sm-10">
      {{input type="text" value=item.founders class="form-control" placeholder="founders"}}
    </div>
  </div>
  <div class="form-group headquarters">
    <label class="col-sm-2 control-label">headquarters</label>
    <div class="col-sm-10">
      {{input type="text" value=item.headquarters class="form-control" placeholder="headquarters"}}
    </div>
  </div>
  <div class="form-group category">
    <label class="col-sm-2 control-label">category</label>
    <div class="col-sm-10">
      {{input type="text" value=item.category class="form-control" placeholder="category"}}
    </div>
  </div>
  <div class="form-group founded-at">
    <label class="col-sm-2 control-label">foundedAt</label>
    <div class="col-sm-10">
      {{bootstrap-datepicker value=item.foundedAt autoclose=true placeholder="Click to play" class="form-control"}}
    </div>
  </div>
  <div class="form-group image">
    <label class="col-sm-2 control-label">image</label>
    <div class="col-sm-10">
      {{input type="text" value=item.image class="form-control" placeholder="image"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}}>{{buttonLabel}}</button>
    </div>
  </div>
</div>
