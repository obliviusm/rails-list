<h2>Add a new project</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="Title"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">founders</label>
    <div class="col-sm-10">
      {{input type="text" value=model.founders class="form-control" placeholder="founders"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">headquarters</label>
    <div class="col-sm-10">
      {{input type="text" value=model.headquarters class="form-control" placeholder="headquarters"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">category</label>
    <div class="col-sm-10">
      {{input type="text" value=model.category class="form-control" placeholder="category"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">foundedAt</label>
    <div class="col-sm-10">
      {{input type="text" value=model.foundedAt class="form-control" placeholder="foundedAt"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">image</label>
    <div class="col-sm-10">
      {{input type="text" value=model.image class="form-control" placeholder="image"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveProject' model}}>Add project</button>
    </div>
  </div>
</div>
