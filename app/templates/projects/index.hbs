<div class="row">
    <div class="col-md-6">
        <h2>List of Projects</h2>
    </div>
    <div class="col-md-6 text-right">
      {{#link-to 'projects.new' class="btn btn-primary btn-lg"}}
        New Project
      {{/link-to}}
    </div>
</div>

{{#list-filter
   filter=(action 'filterByCategory')
   as |projects|}}

  {{#each projects as |projectUnit|}}
    {{project-listing project=projectUnit}}
  {{/each}}
{{/list-filter}}
{{outlet}}
