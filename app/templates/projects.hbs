<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find some awesome sites.</p>
  {{#link-to 'about' class="button"}}
    About Us
  {{/link-to}}
</div>
<h2>List of Projects</h2>

{{#each model as |project|}}
  <article class="listing">
    <h3>{{project.title}}</h3>
    <div class="detail founders">
      <span>Founders:</span> {{project.founders}}
    </div>
    <div class="detail category">
      <span>Category:</span> {{project.category}}
    </div>
    <div class="detail headquarters">
      <span>Headquarters:</span> {{project.headquarters}}
    </div>
    <div class="detail founded">
      <span>Founded:</span> {{project.founded}}
    </div>
  </article>
{{/each}}
