<div class="jumbo">
  <div class="right tomster"></div>
  <h2>Welcome!</h2>
  <p>We hope you find some awesome sites.</p>
  {{#link-to 'about' class="button"}}
    About Us
  {{/link-to}}
</div>

<h2>List of Projects</h2>

{{#list-filter
   filter=(action 'filterByCategory')
   as |projects|}}
  <ul class="results">
    {{#each projects as |projectUnit|}}
      <li>{{project-listing project=projectUnit}}</li>
    {{/each}}
  </ul>
{{/list-filter}}
