<h2>Sign in</h2>
<div class="form-horizontal">
  <form {{action 'authenticate' on='submit'}}>
    <div class="form-group email">
      <label for="identification" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        {{input placeholder='Enter Email' value=identification class="form-control"}}
      </div>
    </div>

    <div class="form-group password">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        {{input placeholder='Enter Password' type='password' value=password class="form-control"}}
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-success">Login</button>
      </div>
    </div>

    <div class="input-error col-sm-offset-2 col-sm-10">
      {{#if errorMessage}}
        <div class="error">
          {{errorMessage}}
        </div>
      {{/if}}
    </div>
  </form>
</div>
